---------------------------------------------------
----------------------테이블 생성 ------------------------
---------------------------------------------------이경빈
-- 인사 정보 테이블 생성
CREATE TABLE PERSONNEL_INFORMATION (
   EMP_NO                   NUMBER
   , DEPT_CODE               NUMBER
   , POSITION_CODE           NUMBER
   , TEAM_CODE               NUMBER
   , NAME                   VARCHAR2(50)      NOT NULL
   , GENDER               CHAR(1)              NOT NULL
   , SOCIAL_SECURITY_NO   CHAR(14)          NOT NULL UNIQUE
   , PASSWORD               VARCHAR2(100)
   , PHONE                   CHAR(11)
   , EXTENSION_CALL       CHAR(11)
   , EMAIL                   VARCHAR2(50)
   , ADDRESS               VARCHAR2(100)
   , DATE_OF_EMPLOYMENT   TIMESTAMP          DEFAULT SYSDATE NOT NULL
   , HEIGHT               NUMBER              NOT NULL
   , WEIGHT               NUMBER              NOT NULL
   , BLOOD_TYPE           CHAR(3)              NOT NULL
   , RELIGION               VARCHAR2(20)
   , SALARY               NUMBER              NOT NULL
   , BANK_NUMBER           CHAR(14)          NOT NULL
   , LEAVING_DATE           TIMESTAMP
   , IMG_ORIGIN_NAME       VARCHAR2(255)
   , IMG_CHANGE_NAME       VARCHAR2(255)
   , OTP_KEY               VARCHAR2(20)
   , SICK_DATE               NUMBER              DEFAULT 15 NOT NULL
   , VACATION_DATE           NUMBER              DEFAULT 15 NOT NULL
);
-- 부서 테이블 생성
CREATE TABLE DEPARTMENT (
   DEPT_CODE               NUMBER
   , PARTNAME               VARCHAR2(50)      NOT NULL UNIQUE
);
-- 팀 테이블 생성
CREATE TABLE DEPARTMENT_TEAM (
   TEAM_CODE               NUMBER
   , TEAM_NAME               VARCHAR2(50)      NOT NULL
   , DEPT_CODE               NUMBER              NOT NULL
   , DEL_YN               CHAR(1)              DEFAULT 'N' NOT NULL
);
-- 직급 테이블 생성
CREATE TABLE POSITION (
   POSITION_CODE           NUMBER
   , NAME_OF_POSITION       CHAR(6)              NOT NULL UNIQUE
);
-- 일정 테이블 생성
CREATE TABLE CALENDAR (
   CALENDAR_NO               NUMBER
   , WRITER_NO               NUMBER              NOT NULL
   , TITLE                   VARCHAR2(40)      NOT NULL
   , CONTENT                 VARCHAR2(1000)
   , START_DATE              CHAR(10)          NOT NULL
   , END_DATE                CHAR(10)           NOT NULL
   , ENROLL_DATE             TIMESTAMP          DEFAULT SYSDATE NOT NULL
   , DEL_DATE                TIMESTAMP
   , RANGE                   VARCHAR2(10)              NOT NULL
);
-- 일정 권한 테이블 생성
CREATE TABLE CALENDAR_AUTHORITY (
   AUTHORITY_NO           NUMBER
   , CALENDAR_NO           NUMBER      NOT NULL
   , EMP_NO               NUMBER      NOT NULL
);
-- 일정 참여자 테이블 생성
CREATE TABLE CALENDAR_JOIN (
   CALENDAR_NO               NUMBER
   , EMP_NO               NUMBER      NOT NULL
);
-- 드라이버 테이블 생성
CREATE TABLE DRIVER (
   NO                   NUMBER
   , ORIGIN_NAME       VARCHAR2(255)      NOT NULL
   , CHANGE_NAME       VARCHAR2(255)      NOT NULL
   , UPLOAD_DATE       TIMESTAMP          DEFAULT SYSDATE NOT NULL
    , DEL_YN           CHAR(1)              DEFAULT 'N' NOT NULL
);
--------------------------------------------------- 나지원
-- APPR_STAGE_LIST 테이블 (결재 상태 리스트)
CREATE TABLE APPR_STAGE_LIST (
   APPR_STAGE_NO       NUMBER NOT NULL
   ,APPR_STAGE_NAME    VARCHAR2(50)
);
-- DOC_STATUS_LIST 테이블 (문서 상태 리스트)
CREATE TABLE DOC_STATUS_LIST (
   DOC_STATUS_NO       NUMBER NOT NULL
   ,DOC_STATUS_NAME    VARCHAR2(50)
);
-- DOCUMENT 테이블 (문서 정보)
CREATE TABLE DOCUMENT (
   DOC_NO              NUMBER NOT NULL
   ,WRITER_NO          NUMBER
   ,TEMPLATE_NO        NUMBER
   ,STATUS             NUMBER NOT NULL
   ,TITLE              VARCHAR2(200)
   ,CONTENT            VARCHAR2(4000)
   ,ENROLL_DATE        TIMESTAMP
   ,CREDIT_DATE        TIMESTAMP
   ,URGENT CHAR(1)     DEFAULT 'N'
   ,DEL_YN CHAR(1)     DEFAULT 'N'
);
COMMENT ON COLUMN DOCUMENT.STATUS IS '1: 임시저장 2: 기안(대기) 3: 결재 취소';
-- DOC_TEMPLATE 테이블 (문서 템플릿 정보)
CREATE TABLE DOC_TEMPLATE (
   TEMPLATE_NO         NUMBER
   ,CATEGORY_NO        NUMBER NOT NULL
   ,TITLE              VARCHAR2(50)
   ,CONTENT            VARCHAR2(4000)
   ,ENROLL_DATE        TIMESTAMP DEFAULT SYSDATE
   ,DEL_YN             CHAR(1) DEFAULT 'N'
);
COMMENT ON COLUMN DOCUMENT.STATUS IS '1: 임시저장 2: 기안(대기) 3: 결재 취소';
-- APPR_LINE 테이블 (결재선 정보)
CREATE TABLE APPR_LINE (
    APPR_LINE_NO           NUMBER   NOT NULL
   ,DOC_NO                 NUMBER   NOT NULL
   ,SEQ                    NUMBER NOT NULL
   ,APPROVER_NO            NUMBER
   ,APPROVAL_STAGE         NUMBER NOT NULL
   ,DEPT_CODE              NUMBER
   ,POSITION_CODE          NUMBER
   ,APPROVAL_DATE          TIMESTAMP
   ,"COMMENT"              VARCHAR2(2000)
   ,DEL_YN                 CHAR(1) DEFAULT 'N'
   ,APPROVER_CLASSIFICATION_NO NUMBER
);
COMMENT ON COLUMN APPR_LINE.APPROVAL_STAGE IS '1: 대기 2: 반려 3: 승인';
COMMENT ON COLUMN APPR_LINE.DEPT_CODE IS '기안시점의 결재자 부서';
COMMENT ON COLUMN APPR_LINE.POSITION_CODE IS '기안시점의 결재자 직위';
COMMENT ON COLUMN APPR_LINE.APPROVER_CLASSIFICATION_NO IS '1 : 결재자 2 : 합의자';
-- APPR_LINE_TEMPLATE 테이블 (결재선 템플릿)
CREATE TABLE APPR_LINE_TEMPLATE (
   APPR_LINE_NO        NUMBER
   ,TEMPLATE_NO        NUMBER
   ,WRITER_NO          NUMBER
   ,APPR_LINE_NAME     VARCHAR2(100)
   ,CREATED_DATE       VARCHAR2(50) DEFAULT SYSDATE
   ,DEL_YN             CHAR(1) DEFAULT 'N'
);
-- APPROVER_INFO 테이블 (결재자 정보)
CREATE TABLE APPROVER_INFO (
   APPROVER_INFO_NO    NUMBER
   ,APPROVER_NO        NUMBER
   ,APPR_LINE_NO       NUMBER
   ,SEQ                NUMBER
   ,APPROVER_CLASSIFICATION_NO NUMBER
);
COMMENT ON COLUMN APPROVER_INFO.APPROVER_CLASSIFICATION_NO IS '1 : 결재자 2 : 합의자';
-- DOC_FILES 테이블 (문서 파일 정보)
CREATE TABLE DOC_FILES (
   FILE_NO             NUMBER NOT NULL
   ,DOC_NO             NUMBER NOT NULL
   ,CHANGE_NAME        VARCHAR2(255)
   ,ORIGIN_NAME        VARCHAR2(255)
   ,DEL_YN             CHAR(1) DEFAULT 'N'
);
-- DOC_TEMPLATE_CATEGORY 테이블 (문서 템플릿 카테고리)
CREATE TABLE DOC_TEMPLATE_CATEGORY (
   CATEGORY_NO         NUMBER NOT NULL
   ,NAME               VARCHAR2(50)
   ,DEL_YN             CHAR(1) DEFAULT 'N'
);
-- DOC_REFERENCE_LIST 테이블 (문서 참조자 리스트)
CREATE TABLE DOC_REFERENCE_LIST (
   REFERENCE_LIST_NO   NUMBER   NOT NULL
    ,DOC_NO               NUMBER   NOT NULL
    ,REFERRER_NO       NUMBER
);
-- MESSAGE 테이블 (메시지 정보)
CREATE TABLE MESSAGE (
   MSG_NO              NUMBER NOT NULL
   ,SENDER_NO          NUMBER
   ,RECEIVER_NO        NUMBER
   ,CONTENT            VARCHAR2(1000)
   ,SEND_DATE          TIMESTAMP
   ,READ_DATE          TIMESTAMP
);

---------------------------------------------------문준서
-- 근무 정보 테이블
CREATE TABLE WORK_INFO (
    WORK_NO          NUMBER,
    EMP_NO           NUMBER,
    WORK_DATE        DATE,
    START_TIME       TIMESTAMP,
    END_TIME         TIMESTAMP,
    OVERTIME_WORK    NUMBER         DEFAULT 0,
    HOLIDAY_WORK     NUMBER         DEFAULT 0
);

-- 병가 신청 테이블
CREATE TABLE SICK_MANAGEMENT (
    SICK_NO          NUMBER,
    EMP_NO           NUMBER,
    DOC_NO           NUMBER,
    REG_DATE         TIMESTAMP,
    START_DATE       DATE,
    EXPIRY_DATE      DATE,
    REASON           VARCHAR2(500),
    STATUS           CHAR(1)
);

-- 기타 신청 테이블
CREATE TABLE ETC_MANAGEMENT (
    ETC_NO           NUMBER,
    ETC_CODE         CHAR(4),
    EMP_NO           NUMBER,
    DOC_NO           NUMBER   NOT NULL,
    REG_DATE         TIMESTAMP,
    START_DATE       DATE,
    EXPIRY_DATE      DATE,
    REASON           VARCHAR2(500)   NOT NULL,
    STATUS           CHAR(1) DEFAULT 'N'
);

-- 휴가 신청 테이블
CREATE TABLE VACATION_MANAGEMENT (
    VACATION_NO          NUMBER,
    VACATION_CODE        CHAR(4),
    EMP_NO               NUMBER,
    DOC_NO               NUMBER   NOT NULL,
    REG_DATE             TIMESTAMP,
    START_DATE           DATE,
    EXPIRY_DATE          DATE,
    REASON               VARCHAR2(500),
    STATUS               CHAR(1) DEFAULT 'N'
);

-- 휴가 참조 테이블
CREATE TABLE VACATION_REFERENCE (
    VACATION_CODE   CHAR(4),
    VACATION_NAME   VARCHAR2(50)
);

-- 기타 참조 테이블
CREATE TABLE ETC_REFERENCE (
    ETC_CODE   CHAR(4),
    ETC_NAME   VARCHAR2(50)
);

---------------------------------------------------이주형

-- BOARD_PENALTY_CATEGORY 테이블 생성
CREATE TABLE BOARD_PENALTY_CATEGORY (
    PENALTY_CATEGORY_NO NUMBER NOT NULL,
    CATEGORY_NAME VARCHAR2(50) NOT NULL
);



-- BOARD_PENALTY 테이블 생성
CREATE TABLE BOARD_PENALTY (
    PENALTY_NO NUMBER NOT NULL,
    PENALTY_CATEGORY_NO NUMBER NOT NULL,
    PENALTY_CONTENT VARCHAR2(1000) NOT NULL,
    IS_PENALTY CHAR(1) DEFAULT 'N',
    BOARD_NO NUMBER NOT NULL,
    EMP_NO NUMBER NOT NULL
);

----좋아요 테이블 생성
CREATE TABLE LIKES (
    board_no INT NOT NULL,
    emp_no INT NOT NULL,
    PRIMARY KEY (board_no, emp_no)
);



---게시판 테이블 생성
CREATE TABLE BOARD (
   BOARD_NO NUMBER NOT NULL,
   TITLE VARCHAR2(200) NULL,
   CONTENT VARCHAR2(2000) NULL,
   HIT NUMBER DEFAULT 0 NOT NULL,
   ENROLL_DATE TIMESTAMP DEFAULT SYSDATE NOT NULL,
   MODIFY_DATE TIMESTAMP DEFAULT SYSDATE NOT NULL,
   DEL_YN CHAR(1) DEFAULT 'N',
   CATEGORY_NO NUMBER NOT NULL,
   INSERT_USER_NO NUMBER NOT NULL,
   LATITUDE VARCHAR2(20) NULL,
   LONGITUDE VARCHAR2(20) NULL,
   IS_ANONYMOUS CHAR(1) DEFAULT 'N' NULL
);

CREATE TABLE BOARD_BOOKMARK (
    BOOKMARK_NO NUMBER PRIMARY KEY,
    BOARD_NO NUMBER NOT NULL,
    EMP_NO NUMBER NOT NULL
);

CREATE TABLE BOARD_COMMENTS (
   BOARD_CHAT_NO NUMBER NOT NULL,
   CONTENT VARCHAR2(300)NOT NULL,
   BOARD_NO NUMBER NOT NULL,
   INSERT_USER_NO NUMBER NOT NULL,
   IS_ANONYMOUS CHAR(1) DEFAULT 'N' NULL ,
    ENROLL_DATE TIMESTAMP DEFAULT SYSDATE NOT NULL,
    MODIFY_DATE TIMESTAMP DEFAULT SYSDATE NOT NULL,
    REPLY_COMMENT_NO	NUMBER	 NULL
);

CREATE TABLE BOARD_FILE (
   FILE_NO NUMBER NOT NULL,
   FILE_ORIGIN_NAME VARCHAR2(100) NOT NULL,
   FILE_SAVE_NAME VARCHAR2(100) NOT NULL,
   FILE_DEL_YN CHAR(1) DEFAULT 'N',
   BOARD_NO NUMBER NOT NULL
);

CREATE TABLE BOARD_CATEGORY (
   CATEGORY_NO NUMBER NOT NULL,
   CATEGORY VARCHAR2(50) NOT NULL
);

CREATE TABLE NOTICE (
   NOTICE_NO NUMBER NOT NULL,
   TITLE VARCHAR2(200)NOT NULL,
   CONTENT VARCHAR2(2000)NOT NULL,
   HIT NUMBER DEFAULT 0 NOT NULL,
   MODIFY_DATE TIMESTAMP DEFAULT SYSDATE NOT NULL,
   DEL_YN CHAR(1) DEFAULT 'N',
   ENROLL_DATE TIMESTAMP DEFAULT SYSDATE NOT NULL,
   INSERT_USER_NO NUMBER NOT NULL
);

CREATE TABLE NOTICE_COMMENTS (
   NOTICE_COMMENTS_NO NUMBER NOT NULL,
   CONTENT VARCHAR2(300) NOT NULL,
   INSERT_USER_NO NUMBER NOT NULL,
   NOTICE_NO NUMBER NOT NULL
);

CREATE TABLE VOTE (
   VOTE_NO NUMBER NOT NULL,
   VOTE_WRITER_NO NUMBER NOT NULL,
   TITLE VARCHAR2(50) NOT NULL,
   CONTENT VARCHAR2(500) NOT NULL,
   END_TIME TIMESTAMP DEFAULT SYSDATE NOT NULL,
   FIRST_TIME TIMESTAMP DEFAULT SYSDATE NOT NULL,
   ANONYMOUS CHAR(1) DEFAULT 'N'
);

CREATE TABLE VOTE_CATEGORY (
   VOTE_CATEGORY_NO NUMBER NOT NULL,
   VOTE_CATEGORY_CONTENT VARCHAR2(50) NOT NULL,
   VOTE_NO NUMBER NOT NULL
);

CREATE TABLE VOTE_RECEIVE (
   VOTE_RECEIVE_NO NUMBER NOT NULL,
   VOTE_SELECTE_NO NUMBER NOT NULL,
   VOTE_CATEGORY_NO NUMBER NOT NULL
);

---------------------------------------------------최혜원
--급여계산 테이블 생성
CREATE TABLE PAYROLL (
   PAYROLL_NO   NUMBER   NOT NULL
   ,EMP_NO   NUMBER   NOT NULL
   ,NATIONAL_PENSION   NUMBER   NOT NULL
   ,HEALTH_INSURANCE   NUMBER   NOT NULL
   ,LONG_CARE   NUMBER   NOT NULL
   ,EMPLOYMENT_INSURANCE   NUMBER   NOT NULL
   ,INCOME_TAX   NUMBER   NOT NULL
   ,LOCAL_INCOME_TAX   NUMBER   NOT NULL
   ,POSITION   NUMBER   NOT NULL
   ,BONUS   NUMBER
   ,HOLIDAY   NUMBER
   ,OVERTIMEWORK   NUMBER
   ,MEALS   NUMBER
   ,TOTAL_SALARY NUMBER
   ,PAYMENT_DATE   TIMESTAMP   NOT NULL
);

-- 4대보험 퍼센트 테이블 생성
CREATE TABLE RATES (
   BASE_YEAR   TIMESTAMP   NOT NULL
   ,PENSION_PERCENTAGE   NUMBER   NOT NULL
   ,HEALTH_INSURANCE_PERCENTAGE   NUMBER  NOT NULL
   ,LONG_CARE_PERCENTAGE   NUMBER   NOT NULL
   ,EMPLOYMENT_INSURANCE_PERCENTAGE   NUMBER  NOT NULL
   ,LOCAL_INCOME_TAX_PERSENTAGE     NUMBER  NOT NULL

);

-- 퇴직금 테이블 생성
CREATE TABLE SEVERANCE_PAY (
   RETIRING_ALLOWANCE_NO   NUMBER   NOT NULL
   ,EMP_NO   NUMBER   NULL
   ,RETIRING_ALLOWANCE   NUMBER   NULL
   ,DEDUCTED_AMOUNT   NUMBER   NULL
   ,TOTAL_SVPAY   NUMBER   NULL
   ,PAYMENT_DATE   TIMESTAMP   NULL
);

--웹메일 테이블 생성
CREATE TABLE WEB_MAIL (
   MAIL_NO   NUMBER   NULL
   ,SENDER_NO   VARCHAR2(50)   NULL
   ,RECIPIENT_NO   VARCHAR2(50)   NULL
   ,TITLE   VARCHAR2(200)   NULL
   ,CONTENT   VARCHAR2(4000)   NULL
   ,W_DATE   TIMESTAMP   NULL
   ,IS_READ   CHAR(1)   NULL
   ,IS_ARCHIVED   CHAR(1)   NULL
    ,EMP_NO   NUMBER   NULL
);

---------------------------------------------------
----------------------PK 생성 ------------------------
---------------------------------------------------이경빈

-- 사원 정보 PK 생성
ALTER TABLE PERSONNEL_INFORMATION ADD CONSTRAINT PK_PERSONNEL_INFORMATION PRIMARY KEY (
   EMP_NO
);
-- 부서 PK 생성
ALTER TABLE DEPARTMENT ADD CONSTRAINT PK_DEPARTMENT PRIMARY KEY (
   DEPT_CODE
);
-- 팀 PK 생성
ALTER TABLE DEPARTMENT_TEAM ADD CONSTRAINT PK_DEPARTMENT_TEAM PRIMARY KEY (
   TEAM_CODE
);
-- 직급 PK 생성
ALTER TABLE POSITION ADD CONSTRAINT PK_POSITION PRIMARY KEY (
   POSITION_CODE
);
-- 일정 PK 생성
ALTER TABLE CALENDAR ADD CONSTRAINT PK_CALENDAR PRIMARY KEY (
   CALENDAR_NO
);
-- 일정 권한 PK 생성
ALTER TABLE CALENDAR_AUTHORITY ADD CONSTRAINT PK_CALENDAR_AUTHORITY PRIMARY KEY (
   AUTHORITY_NO
);
-- 드라이버 PK 추가
ALTER TABLE DRIVER ADD CONSTRAINT PK_DRIVER PRIMARY KEY (
   NO
);

--------------------------------------------------- 나지원

