---------- 제약조건 --------------
---------------------------------
---------------------------------------------------이경빈
ALTER TABLE PERSONNEL_INFORMATION ADD CONSTRAINT CK_PERSONNEL_INFORMATION CHECK (GENDER IN ('F', 'M'));
ALTER TABLE CALENDAR ADD CONSTRAINT CK_CALENDAR CHECK (REPEAT_YN IN ('Y', 'N'));
---------------------------------------------------나지원
ALTER TABLE DOCUMENT ADD CONSTRAINT CK_DOCUMENT_URGENT CHECK (URGENT IN ('Y', 'N'));
ALTER TABLE DOCUMENT ADD CONSTRAINT CK_DOCUMENT_DEL_YN CHECK (DEL_YN IN ('Y', 'N'));
ALTER TABLE DOC_TEMPLATE ADD CONSTRAINT CK_DOC_TEMPLATE_DEL_YN CHECK (DEL_YN IN ('Y', 'N'));
ALTER TABLE APPR_LINE ADD CONSTRAINT CK_APPR_LINE_DEL_YN CHECK (DEL_YN IN ('Y', 'N'));
ALTER TABLE APPR_LINE_TEMPLATE ADD CONSTRAINT CK_APPR_LINE_TEMPLATE_DEL_YN CHECK (DEL_YN IN ('Y', 'N'));
ALTER TABLE APPROVER_INFO ADD CONSTRAINT CK_APPROVER_INFO_APPROVER_CLASSIFICATION_NO CHECK (APPROVER_CLASSIFICATION_NO IN (1, 2));
ALTER TABLE DOC_FILES ADD CONSTRAINT CK_DOC_FILES_DEL_YN CHECK (DEL_YN IN ('Y', 'N'));
ALTER TABLE DOC_TEMPLATE_CATEGORY ADD CONSTRAINT CK_DOC_TEMPLATE_CATEGORY_DEL_YN CHECK (DEL_YN IN ('Y', 'N'));
---------------------------------------------------문준서
ALTER TABLE ETC_MANAGEMENT ADD CONSTRAINT CK_ETC_MANAGEMENT CHECK (STATUS IN ('Y', 'N'));
ALTER TABLE VACATION_MANAGEMENT ADD CONSTRAINT CK_VACATION_MANAGEMENT CHECK (STATUS IN ('Y', 'N'));
---------------------------------------------------이주형
---------------------------------------------------최혜원

