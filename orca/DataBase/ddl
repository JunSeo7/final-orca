----------------------FK 생성 ------------------------
---------------------------------------------------이경빈

-- 인사 정보 외래키
ALTER TABLE PERSONNEL_INFORMATION ADD CONSTRAINT FK_PERSONNEL_INFORMATION_DEPARTMENT FOREIGN KEY (DEPT_CODE) REFERENCES DEPARTMENT(DEPT_CODE);
ALTER TABLE PERSONNEL_INFORMATION ADD CONSTRAINT FK_PERSONNEL_INFORMATION_DEPARTMENT_TEAM FOREIGN KEY (TEAM_CODE) REFERENCES DEPARTMENT_TEAM(TEAM_CODE);
ALTER TABLE PERSONNEL_INFORMATION ADD CONSTRAINT FK_PERSONNEL_INFORMATION_POSITION FOREIGN KEY (POSITION_CODE) REFERENCES POSITION(POSITION_CODE);
-- 팀 외래키
ALTER TABLE DEPARTMENT_TEAM ADD CONSTRAINT FK_DEPARTMENT_TEAM_DEPARTMENT FOREIGN KEY (DEPT_CODE) REFERENCES DEPARTMENT(DEPT_CODE);
-- 일정 외래키
ALTER TABLE CALENDAR ADD CONSTRAINT FK_CALENDAR_PERSONNEL_INFORMATION FOREIGN KEY (WRITER_NO) REFERENCES PERSONNEL_INFORMATION(EMP_NO);
-- 일정 권한 외래키
ALTER TABLE CALENDAR_AUTHORITY ADD CONSTRAINT FK_CALENDAR_AUTHORITY_CALENDAR FOREIGN KEY (CALENDAR_NO) REFERENCES CALENDAR(CALENDAR_NO);
ALTER TABLE CALENDAR_AUTHORITY ADD CONSTRAINT FK_CALENDAR_AUTHORITY_PERSONNEL_INFORMATION FOREIGN KEY (EMP_NO) REFERENCES PERSONNEL_INFORMATION(EMP_NO);
-- 일정 참여자 외래키
ALTER TABLE CALENDAR_JOIN ADD CONSTRAINT FK_CALENDAR_JOIN_CALENDAR FOREIGN KEY (CALENDAR_NO) REFERENCES CALENDAR(CALENDAR_NO);
ALTER TABLE CALENDAR_JOIN ADD CONSTRAINT FK_CALENDAR_JOIN_PERSONNEL_INFORMATION FOREIGN KEY (EMP_NO) REFERENCES PERSONNEL_INFORMATION(EMP_NO);

--------------------------------------------------- 나지원

-- APPR_LINE 테이블의 외래 키 제약 조건 추가
ALTER TABLE APPR_LINE ADD CONSTRAINT FK_DOCUMENT_TO_APPR_LINE FOREIGN KEY (DOC_NO) REFERENCES DOCUMENT (DOC_NO); -- 문서 참조
ALTER TABLE APPR_LINE ADD CONSTRAINT FK_PERSONNEL_INFORMATION_TO_APPR_LINE FOREIGN KEY (APPROVER_NO) REFERENCES PERSONNEL_INFORMATION (EMP_NO); -- 결재자 참조
ALTER TABLE APPR_LINE ADD CONSTRAINT FK_APPR_STAGE_LIST_TO_APPR_LINE FOREIGN KEY (APPROVAL_STAGE) REFERENCES APPR_STAGE_LIST (APPR_STAGE_NO); -- 결재 단계 참조
ALTER TABLE APPR_LINE ADD CONSTRAINT FK_DEPARTMENT_TO_APPR_LINE FOREIGN KEY (DEPT_CODE) REFERENCES DEPARTMENT (DEPT_CODE); -- 부서 참조
ALTER TABLE APPR_LINE ADD CONSTRAINT FK_POSITION_TO_APPR_LINE FOREIGN KEY (POSITION_CODE) REFERENCES POSITION (POSITION_CODE); -- 직급 참조

-- DOC_TEMPLATE 테이블의 외래 키 제약 조건 추가
ALTER TABLE DOC_TEMPLATE ADD CONSTRAINT FK_DOC_TEMPLATE_CATEGORY_TO_DOC_TEMPLATE FOREIGN KEY (CATEGORY_NO) REFERENCES DOC_TEMPLATE_CATEGORY (CATEGORY_NO); -- 문서 템플릿 카테고리 참조

-- DOC_FILES 테이블의 외래 키 제약 조건 추가
ALTER TABLE DOC_FILES ADD CONSTRAINT FK_DOCUMENT_TO_DOC_FILES FOREIGN KEY (DOC_NO) REFERENCES DOCUMENT (DOC_NO); -- 문서 참조

-- APPR_LINE_TEMPLATE 테이블의 외래 키 제약 조건 추가
ALTER TABLE APPR_LINE_TEMPLATE ADD CONSTRAINT FK_PERSONNEL_INFORMATION_TO_APPR_LINE_TEMPLATE FOREIGN KEY (WRITER_NO) REFERENCES PERSONNEL_INFORMATION (EMP_NO); -- 작성자 참조
ALTER TABLE APPR_LINE_TEMPLATE ADD CONSTRAINT FK_DOC_TEMPLATE_TO_APPR_LINE_TEMPLATE FOREIGN KEY (TEMPLATE_NO) REFERENCES DOC_TEMPLATE (TEMPLATE_NO); -- 결재선 템플릿 참조

-- APPROVER_INFO 테이블의 외래 키 제약 조건 추가
ALTER TABLE APPROVER_INFO ADD CONSTRAINT FK_PERSONNEL_INFORMATION_TO_APPROVER_INFO FOREIGN KEY (APPROVER_NO) REFERENCES PERSONNEL_INFORMATION (EMP_NO); -- 결재자 참조
ALTER TABLE APPROVER_INFO ADD CONSTRAINT FK_APPR_LINE_TEMPLATE_TO_APPROVER_INFO FOREIGN KEY (APPR_LINE_NO) REFERENCES APPR_LINE_TEMPLATE (APPR_LINE_NO); -- 결재선 템플릿 참조

-- DOCUMENT 테이블의 외래 키 제약 조건 추가
ALTER TABLE DOCUMENT ADD CONSTRAINT FK_PERSONNEL_INFORMATION_TO_DOCUMENT FOREIGN KEY (WRITER_NO) REFERENCES PERSONNEL_INFORMATION (EMP_NO); -- 작성자 참조
ALTER TABLE DOCUMENT ADD CONSTRAINT FK_DOC_TEMPLATE_TO_DOCUMENT FOREIGN KEY (TEMPLATE_NO) REFERENCES DOC_TEMPLATE (TEMPLATE_NO); -- 문서 템플릿 참조
ALTER TABLE DOCUMENT ADD CONSTRAINT FK_DOC_STATUS_LIST_TO_DOCUMENT FOREIGN KEY (STATUS) REFERENCES DOC_STATUS_LIST (DOC_STATUS_NO); -- 문서 상태 참조

-- DOC_REFERENCE_LIST 테이블의 외래 키 제약 조건 추가
ALTER TABLE DOC_REFERENCE_LIST ADD CONSTRAINT FK_DOCUMENT_TO_DOC_REFERENCE_LIST FOREIGN KEY (DOC_NO) REFERENCES DOCUMENT (DOC_NO); -- 문서 참조
ALTER TABLE DOC_REFERENCE_LIST ADD CONSTRAINT FK_PERSONNEL_INFORMATION_TO_DOC_REFERENCE_LIST FOREIGN KEY (REFERRER_NO) REFERENCES PERSONNEL_INFORMATION (EMP_NO); -- 참조자 참조

-- MESSAGE 테이블의 외래 키 제약 조건 추가
ALTER TABLE MESSAGE ADD CONSTRAINT FK_PERSONNEL_INFORMATION_TO_MESSAGE_1 FOREIGN KEY (SENDER_NO) REFERENCES PERSONNEL_INFORMATION (EMP_NO); -- 발신자 참조
ALTER TABLE MESSAGE ADD CONSTRAINT FK_PERSONNEL_INFORMATION_TO_MESSAGE_2 FOREIGN KEY (RECEIVER_NO) REFERENCES PERSONNEL_INFORMATION (EMP_NO); -- 수신자 참조

